doctype html
html
  head
    meta(charset='utf-8')
    title Login - Control panel
    // Mobile device set
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    // Fav and touch icons

    // STYLES
    link(rel="stylesheet", href="/stylesheets/_bootstrap.css")
    link(rel="stylesheet", href="/stylesheets/bootstrap.css")
    link(rel="stylesheet", href="/stylesheets/importer.css")
    // STYLES END

    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
    //- script(src='javascripts/modernizr.custom.js')
  body.control-panel-page
    //- .loader
    a#scrolltotop
      span.glyphicon.glyphicon-menu-up
    include ../partial/_auth_header
    .container.font-size-slarge
      .row.m-top-10.m-bottom-10
        .col-sm-6.col-sm-offset-3
          .border-block-3.p-40
            h2.text-center.m-bottom-4 修改密碼

            if message
              .alert.alert-success=message

            hr
            form.form-horizontal(method='post')
              .form-group
                label.col-md-4.control-label 原密碼
                .col-md-8
                  input.form-control(name='oldPassword', type='password', placeholder='Original Password')
              // /form-group

              br

              .form-group
                label.col-md-4.control-label 新密碼
                .col-md-8
                  input.form-control(name='newPassword', type='password', placeholder='Password')
              // /form-group
              .form-group
                label.col-md-4.control-label 再次輸入密碼
                .col-md-8
                  input.form-control(name='newPassword2', type='password', placeholder='Password')
              // /form-group
              .text-center.m-top-6
                button.btn.btn-black.btn-block.border-radius-circle(type='submit') 確認
                a.btn.btn-gray.btn-block.border-radius-circle(href='/admin/') 結束
              // /text-center
          // /border-block-3
        // /col-sm-6
      // /row
    include ../partial/_auth_footer
